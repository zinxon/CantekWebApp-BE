{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Nest Framework",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug",
          "--",
          "--inspect-brk"
        ],
        "autoAttachChildProcesses": true,
        "restart": true,
        "sourceMaps": true,
        "stopOnEntry": false,
        "console": "integratedTerminal",
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Serverless Offline Debug",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "sls:debug"],
        "sourceMaps": true,
        "autoAttachChildProcesses": true,
        "stopOnEntry": false,
        "restart": true,
        "console": "integratedTerminal"
    } ,
